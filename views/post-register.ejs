<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>
    <%- include('partials/header.ejs') %>

        <section class="container">
            <%- include('partials/navbar.ejs') %>

                <article class="content">
                    <h1>Cadastro de Post</h1>
                    <div class="add-post">
                        <a href="/posts">↩</a>
                    </div>

                    <% if (cadastrado) { %>
                        <div class="mensagem" id="mensagem">
                            Post cadastrado com sucesso!
                        </div>
                        <script>
                            mensagem.addEventListener('click', () => {
                                mensagem.classList.add('sair')
                            })
                        </script>
                    <% } %>

                    <form class="form" action="/save-post" method="post">
                        <div>
                            <label>Título</label>
                            <input name="title" type="text" placeholder="Digite o título">
                        </div>
                        <div>
                            <label>Conteúdo</label>
                            <textarea name="text"></textarea>
                        </div>
                        <div>
                            <button type="submit">Cadastrar</button>
                        </div>
                    </form>

                </article>
        </section>

        <%- include('partials/footer.ejs') %>

            <%- include('partials/foot.ejs') %>
</body>

</html>