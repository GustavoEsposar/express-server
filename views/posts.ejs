<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>
    <%- include('partials/header.ejs') %>

        <section class="container">
            <%- include('partials/navbar.ejs') %>

                <article class="content">
                    <h1>Posts</h1>
                    <div class="add-post">
                        <a href="/post-register">+</a>
                    </div>

                    <div class="posts">
                        <% posts.forEach((item)=> { %>
                            <div class="post">
                                <h3>
                                    <%= item.title %>
                                </h3>
                                <p>
                                    <%= item.text %>
                                </p>

                                <% if(item.stars) { %>
                                    <% for( let index=0; index < item.stars; index++ ) { %>
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/2/2e/Star_Icon_CC0.png"
                                            alt="star icon" style="width: 35px;">
                                    <% } %>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>

                </article>
        </section>

        <%- include('partials/footer.ejs') %>

            <%- include('partials/foot.ejs') %>
</body>

</html>